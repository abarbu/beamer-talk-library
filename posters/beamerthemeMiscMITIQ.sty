\setbeamertemplate{itemize items}{}
\setbeamertemplate{navigation symbols}{}

\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[ht=5.5ex,dp=0.5ex,rounded=false,shadow=false,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\Large\insertblocktitle\\[-1ex]
    \rule{\linewidth}{1pt}
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\vskip-2.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=false,shadow=false,leftskip=0.5cm,colsep*=.75ex,sep=2ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
    \vspace{-2ex}
  }
  \setbeamertemplate{block end}{
    \vskip-1.2ex
  \end{beamercolorbox}
}

\setbeamertemplate{headline}{
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      % \begin{column}{.015\paperwidth}
      %   \vspace{20ex}
      % \end{column}
      \begin{column}{0.02\paperwidth}
      \end{column}
      \begin{column}{.20\paperwidth}
        \raggedright%
        \vspace{15ex}%
        \usebeamercolor{institute in headline}{\color{fg}{\insertinstitute}}
       \end{column}
      \begin{column}{.50\paperwidth}
        \vskip12ex
        %% \raggedright
        %% \centering
        %% \usebeamercolor{title in headline}{\color{fg}\textbf{\Large{\inserttitle}\\[1.5ex]}}
        %% \usebeamercolor{author in headline}{\color{fg}{\Large{\insertauthor}\\[1.5ex]}}
        %% \usebeamercolor{institute in headline}{\color{fg}{\Large{\insertinstitute}\\[1ex]\ }}
        \centering
        \usebeamercolor{title in headline}{\color{fg}\textbf{\fontsize{20pt}{20pt}\selectfont\inserttitle\\[2.5ex]}}
      \end{column}
      \begin{column}{0.0\paperwidth}
        \rule{0ex}{45ex}
      \end{column}
      \begin{column}{.20\paperwidth}
        \vspace{15ex}%
        \raggedleft%
        \usebeamercolor{author in headline}{\color{fg}{\linespread{5}\textbf{\Large{\insertauthor}}\\[5.5ex]}}
        \vskip40ex
      \end{column}
      \begin{column}{0.02\paperwidth}
      \end{column}
    \end{columns}
  \end{beamercolorbox}
  \vspace{-5ex}
  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{3pt}
  \end{beamercolorbox}
}

